# Example environment variables for local development
# Copy this file to .env.development or .env and customize values as needed

# Core
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=United Dev Platform (Dev)
NEXT_PUBLIC_APP_VERSION=0.0.2-dev
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API / WebSocket
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# WebSocket port (used by server utilities)
WS_PORT=3030

# Authentication (development only: not required unless testing auth flows)
# In production you must set NEXTAUTH_SECRET and DATABASE_URL
NEXTAUTH_SECRET=dev-secret-example
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Database (optional for local dev when using docker-compose)
# Example for docker-compose.dev.yml default
DATABASE_URL=postgresql://postgres:password@localhost:5433/udp_dev_db

# AI providers (leave blank to use local models if ALLOW_LOCAL_MODELS=true)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
ALLOW_LOCAL_MODELS=true
LOCAL_OPENAI_BASE_URL=http://localhost:11434/v1

# Feature flags
DEBUG=true
ENABLE_TELEMETRY=false
ENABLE_ANALYTICS=false

# Mobile deep link settings
NEXT_PUBLIC_MOBILE_SCHEME=udp
NEXT_PUBLIC_DEEPLINK_BASE=udp://open
# Example environment variables for local development
# Copy this file to `.env` and fill in real values (do NOT commit .env)

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/udp_db

# NextAuth / App
NEXTAUTH_SECRET=replace_with_secure_random_value
NEXTAUTH_URL=http://localhost:3000

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# API / App
NODE_ENV=development
PORT=3001
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Redis
REDIS_URL=redis://localhost:6379

# OpenAI / AI providers (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Docker / Compose overrides
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=udp_db
# Local Environment Configuration
# Copy this file to .env.local and fill in your actual values
# .env.local is gitignored and will override other env files

# AI API Keys (Get from respective providers)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Authentication (for development)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Database (if using local database)
DATABASE_URL=postgresql://postgres:password@localhost:5432/udp_local

# Local AI Models (if using Ollama or similar)
ALLOW_LOCAL_MODELS=true
LOCAL_OPENAI_BASE_URL=http://localhost:11434/v1

# Custom WebSocket URL (if running custom server)
NEXT_PUBLIC_WS_URL=ws://localhost:3030

# Override any other settings as needed
# DEBUG=true
# ENABLE_TELEMETRY=false