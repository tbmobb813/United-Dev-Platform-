{
  "name": "@udp/web",
  "version": "0.0.2",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --config ../../jest.config.core.cjs --runInBand",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:backup": "pg_dump $DATABASE_URL > backup-$(date +%Y%m%d-%H%M%S).sql",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@monaco-editor/react": "^4.6.0",
    "@prisma/client": "^6.17.1",
    "@tanstack/react-query": "^5.51.0",
    "@udp/ai": "workspace:^",
    "@udp/config": "workspace:^",
    "@udp/editor-core": "workspace:^",
    "@udp/ui": "workspace:^",
    "monaco-editor": "^0.54.0",
    "next": "15.5.5",
    "next-auth": "^4.24.11",
    "prisma": "^6.17.1",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "uuid": "^13.0.0",
    "y-protocols": "^1.0.6",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@types/react": "19.2.2",
    "@types/uuid": "11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@udp/eslint-config": "workspace:*",
    "@udp/prettier-config": "workspace:*",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.5",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": [
      "@udp/eslint-config/react"
    ],
    "rules": {
      "@next/next/no-duplicate-head": "off"
    }
  },
  "prettier": "@udp/prettier-config"
}
