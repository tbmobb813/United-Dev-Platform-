# Production Environment Configuration
NODE_ENV=production

# Application Configuration
NEXT_PUBLIC_APP_NAME=Unified Dev Platform
NEXT_PUBLIC_APP_VERSION=0.0.2
NEXT_PUBLIC_APP_URL=https://your-domain.com

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=wss://your-ws-domain.com
WS_PORT=443

# API Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# AI Configuration
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
ALLOW_LOCAL_MODELS=false
LOCAL_OPENAI_BASE_URL=

# Authentication
NEXTAUTH_SECRET=
NEXTAUTH_URL=https://your-domain.com
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Database
DATABASE_URL=

# Production Features
DEBUG=false
ENABLE_TELEMETRY=true
ENABLE_ANALYTICS=true

# Mobile App Configuration
NEXT_PUBLIC_MOBILE_SCHEME=udp
NEXT_PUBLIC_DEEPLINK_BASE=udp://open

# Collaboration Settings
NEXT_PUBLIC_MAX_COLLABORATORS=50
NEXT_PUBLIC_SYNC_INTERVAL=100

# Performance Settings
NEXT_PUBLIC_EDITOR_DEBOUNCE=300
NEXT_PUBLIC_PRESENCE_UPDATE_INTERVAL=1000